<h1>Burgs!</h1>

<h2>Burgers that are said to be filling</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
        <form class="burger-be-ate" data-id={{this.id}} data-burger={{this.burger_name}}>
      <div class="name"> {{this.id}}. {{this.burger_name}} </div> 
      <button class="devour" id={{this.id}} type="devour">Devour</button>
      {{!-- {{> burgers/burger-block canEat=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
        <form> {{this.id}}. {{this.burger_name}} </form>
      {{!-- {{> burgers/burger-block canEat=false}} --}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="burger_name">
  </div>

  {{!-- <div class="form-group">
    <label for="devoured">Devour?</label><br>
    <input type="radio" name="devoured" value="1" checked> Eat and Store it!<br>
    <input type="radio" name="devoured" value="0"> Upload for Viewing (and later eating)
  </div> --}}

  <button type="submit">Add Burger</button>
</form>
